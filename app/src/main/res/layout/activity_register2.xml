<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_500">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:elevation="10dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/logo"
                android:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:src="@drawable/banner7"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/regGeneralHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/logo"
                android:textColor="@color/gray"
                android:text="General Information"
                android:gravity="center" />
            <View
                android:id="@+id/regHR"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/gray"
                android:layout_below="@id/regGeneralHeading"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp" />

            <LinearLayout
                android:id="@+id/regName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/regHR"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textColor="@color/black"

                    android:textSize="14dp"
                    android:text="Name"
                    android:gravity="left|center"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:id="@+id/tvUserName"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter Name"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:textColorHint="#a0a0a0"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/regAge"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/regName"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:text="Age"
                    android:gravity="left|center"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:inputType="number"
                    android:id="@+id/tvUserAge"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:hint="Enter Age"
                    android:textColor="@color/black"
                    android:textColorHint="#a0a0a0"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/regGender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/regAge"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:text="Gender"
                    android:gravity="left|center"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:id="@+id/tvUserGender"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:hint="Enter Gender"
                    android:textColor="@color/black"
                    android:textColorHint="#a0a0a0"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/regEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/regGender"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:text="Email"
                    android:gravity="left|center"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:inputType="textEmailAddress"
                    android:id="@+id/tvUserEmail"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:hint="Enter Email"
                    android:textColor="@color/black"
                    android:textColorHint="#a0a0a0"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/regAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/regEmail"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:text="Address"
                    android:gravity="left|center"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:inputType="textPostalAddress"
                    android:id="@+id/tvUserAddress"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:hint="Enter Address"
                    android:textColor="@color/black"
                    android:textColorHint="#a0a0a0"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/regNextBtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/regAddress"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Next"
                android:textSize="14dp"
                android:background="@color/purple_500" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>